<% if current_user %>
  <div class="flex items-center gap-4  ">
    <p class="text-gray-700">Hello <%= current_user.email %></p>
    <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "px-4 py-2 text-green-600 bg-red-600 border border-solid border-black hover:text-blue-800 hover:underline" %>
    you are <%= current_user.role %>
  
  </div>
<% else %>
  <div class="flex items-center gap-4">
    <%= link_to "Sign in", new_user_session_path, 
        class: "text-blue-600 hover:text-blue-800 hover:underline" %>
    <%= link_to "Sign up", new_user_registration_path, 
        class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors" %>
  </div>
<% end %>