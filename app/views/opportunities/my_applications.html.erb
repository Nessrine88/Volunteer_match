<ul class="  grid gap-6 md:grid-cols-2 lg:grid-cols-3 h-[75dvh] mt-10 mx-10">
  <% @opportunities.each do |opportunity| %>
    <li class="bg-white border relative border-gray-200 rounded-xl shadow hover:shadow-md transition-all duration-200 p-6">
      <h3 class="text-lg font-bold text-gray-900 mb-2">
        <%= opportunity.title %>
      </h3>
      <p class="">
      <%= opportunity.description %>
      </p>
      <% application = opportunity.applications.find_by(user_id: current_user.id) %>
      <% if application %>
        <p class="text-sm text-green-600 rounded-2xl px-5 py-2 bg-yellow-100 font-medium mt-1 absolute bottom-5 right-5">
          Status: <span class="capitalize"><%= application.status %></span>
        </p>
      <% else %>
        <p class="text-sm text-gray-500 italic mt-1">
          No application status available.
        </p>
      <% end %>
    </li>
  <% end %>
</ul>
