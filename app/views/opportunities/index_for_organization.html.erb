<div class="w-full px-4 sm:px-6 lg:px-8 h-full">
  

  <div id="opportunities" class="space-y-6 divide-y divide-gray-200">
    <% if @opportunities.any? %>
      <% @opportunities.each do |opportunity| %>
        <div class="pt-6 pb-6">
          <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-bold text-gray-900"><%= opportunity.title %></h2>
            <p class="text-gray-600 mt-2"><%= opportunity.description %></p>
            
            <div class="mt-4 flex flex-wrap gap-2">
              <% opportunity.skills_required.split(',').each do |skill| %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  <%= skill.strip %>
                </span>
              <% end %>
            </div>

            <div class="mt-4 flex items-center text-sm text-gray-500">
              <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <%= opportunity.location %>
            </div>

            <div class="mt-4 flex justify-between items-center">
              <div class="text-sm text-gray-500">
                <%= opportunity.start_date.to_date.to_formatted_s(:long) %> to <%= opportunity.end_date.to_date.to_formatted_s(:long) %>
              </div>
              <div class="flex space-x-2">
                <%= link_to "View", opportunity, class: "text-red-600 hover:text-red-800" %>
                <%= link_to "Edit", edit_opportunity_path(opportunity), class: "text-gray-600 hover:text-gray-800" %>
              </div>
            </div>
                        <div class="mt-4">
    <%= link_to "View Applicants", "#", class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded hover:bg-blue-700" %>
  </div>
          </div>

        </div>
      <% end %>
    <% else %>
      <div class="text-center h-[75dvh] flex items-center justify-center flex-col">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <h3 class="mt-2 text-lg font-medium text-gray-900">No opportunities found</h3>
        <p class="mt-1 text-gray-500">Create your first opportunity to get started.</p>
        <div class="mt-6">
          <%= link_to "New opportunity", new_opportunity_path, class: "px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-md shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
        </div>
      </div>
    <% end %>
  
  </div>
  
</div>