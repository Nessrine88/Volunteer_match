<% content_for :title, "Opportunities" %>

<div class="w-full px-4 sm:px-6 lg:px-8 mt-10">
  <%= render partial: 'search_bar' %>

  <% if notice.present? %>
    <div class="p-4 mb-6 rounded-lg bg-red-50 border-l-4 border-red-500">
      <p class="text-red-700 font-medium" id="notice"><%= notice %></p>
    </div>
  <% end %>

  <% if @opportunities.any? %>
    <div id="opportunities" class="grid grid-cols-1 sm:grid-cols-2 gap-5">
      <% @opportunities.each do |opportunity| %>
        <div class=" ">
          <%= render opportunity %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
      </svg>
      <h3 class="mt-2 text-lg font-medium text-gray-900">No opportunities found</h3>
      <p class="mt-1 text-gray-500">Create your first opportunity to get started.</p>
      <div class="mt-6">
        <%= link_to "New opportunity", new_opportunity_path, class: "px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-md shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
      </div>
    </div>
  <% end %>
</div>
