<div id="<%= dom_id opportunity %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= opportunity.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= opportunity.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Skills required:</strong>
    <%= opportunity.skills_required %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Location:</strong>
    <%= opportunity.location %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Start date:</strong>
    <%= opportunity.start_date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">End date:</strong>
    <%= opportunity.end_date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">User:</strong>
    <%= opportunity.user_id %>
  </div>
</div>
