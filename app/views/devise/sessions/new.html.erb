<div class="flex justify-center items-center min-h-screen bg-white">
  <div class="bg-white rounded-3xl shadow-lg flex overflow-hidden max-w-6xl w-full">
    <!-- Registration Form Section -->
    <div class="w-full md:w-1/2 p-10">
      <h2 class="text-2xl font-semibold text-center mb-8">SIGN IN</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>


        <div>
          <%= f.label :email, class: "block text-sm font-medium" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500" %>
        </div>


        <div>
          <%= f.submit "SIGN IN", class: "w-full bg-red-600 hover:bg-red-700 text-white py-2 rounded-full font-semibold shadow-md transition" %>
        </div>
      <% end %>
    </div>

    <!-- Image or Graphic Section -->
    <div class="hidden md:flex md:w-1/2 items-center justify-center bg-gray-50">
      <img src="<%= asset_path('Volunteers.jpg') %>"alt="SIGN IN Visual" class="w-full h-auto object-cover" />
    </div>
  </div>
</div>
